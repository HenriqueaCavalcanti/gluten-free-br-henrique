@page "/RecipeID"
@inject HttpClient Http
@inject NavigationManager Navigation


<PageTitle>Recipe</PageTitle>

<h1>@recipe?.Name</h1>

<p>Descritivo: @recipe?.Text</p>
<button class="btn btn-primary" @onclick="GoToHome">Voltar para Home</button>

@code {
    private Recipe? recipe;

    protected override async Task OnInitializedAsync()
    {
       try
        {
            string url = "http://localhost:5125/Recipe/v1/1";
            recipe = await Http.GetFromJsonAsync<Recipe>(url);
            StateHasChanged();
        }
        catch(Exception ex)
        {
            Console.Write(ex.Message);
        }
    }
    private void GoToHome()
    {
        Navigation.NavigateTo("/Recipes");
    }

}
