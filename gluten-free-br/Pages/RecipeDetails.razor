@page "/recipe/{RecipeId:int}"
@using gluten_free_br.Interfaces
@inject IRecipesService RecipeService
@inject NavigationManager Navigation

<PageTitle>Recipe</PageTitle>

@if (recipe == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <h1>@recipe.Name</h1>

    <p>Descritivo: @recipe.Text</p>
    <button class="btn btn-primary" @onclick="GoToRecipes">Voltar para Home</button>
}


@code {
    [Parameter]
    public int RecipeId { get; set; }

    private Recipe? recipe;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            //para produção
            recipe = await RecipeService.GetRecipesByIdAsync(RecipeId);

            //para desenvolvimento
            //recipe = await MockRecipesService.GetRecipesByIdAsync(RecipeId);
        }
        catch (Exception ex)
        {
            Console.Write(ex.Message);
        }
    }

    private void GoToRecipes()
    {
        Navigation.NavigateTo("/Recipes");
    }
}
